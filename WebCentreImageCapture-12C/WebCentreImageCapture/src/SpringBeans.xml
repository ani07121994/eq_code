<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 
	
  <!-- Quartz Scheduler -->
  <!-- <import resource="com/qantas/ap/quartz/Quartz-Jobs.xml"/> -->
  
	<bean id="imagingUpdateTask" class="com.qantas.ap.quartz.ImagingUpdateTask" />
 	
 	<bean id="schedulerTask" class="org.springframework.scheduling.timer.MethodInvokingTimerTaskFactoryBean">
		<property name="targetObject" ref="imagingUpdateTask" />
		<property name="targetMethod" value="run" />
	</bean>
	
	
	<bean id="timerTask" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="timerTask" ref="schedulerTask" />
		<property name="delay" value="60000" />
		<property name="period" value="14400000" />
	</bean>
	
	<bean class="org.springframework.scheduling.timer.TimerFactoryBean">
		<property name="scheduledTimerTasks">
			<list>
				<ref local="timerTask" />
			</list>
		</property>
	</bean>
 	
</beans>